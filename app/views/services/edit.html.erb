  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :person_id %><br />
    <%= f.text_field :person_id %>
  </p>
  <p>
    <%= f.label :work_id %><br />
    <%= f.text_field :work_id %>
  </p>
  <p>
    <%= f.label :images_id %><br />
    <%= f.text_field :images_id %>
