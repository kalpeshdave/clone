<h1>New blog</h1>

<% form_for(@blog) do |f| %>
  <%= f.error_messages %>

<p>
  <label for="blog_person">Person</label>:
  <%= collection_select(:blog,:person_id,@people,:id,:name) %>
</p>
<p>
  <label for="Catagory">Type</label>:
  <%= collection_select(:blog,:blogcatagory_id,@blogcatagories,:id,:name) %>
</p>

<p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
 
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', blogs_path %>